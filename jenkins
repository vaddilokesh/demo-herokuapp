pipeline {
    agent any

    stages {

        stage('Setup Environment') {
            steps {
                bat 'python --version'
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests on Chrome & Edge') {
            parallel {
                stage('Chrome Execution') {
                    steps {
                        bat 'pytest tests --browser=chrome --junitxml=reports/chrome/report.xml'
                    }
                }
                stage('Edge Execution') {
                    steps {
                        bat 'pytest tests --browser=edge --junitxml=reports/edge/report.xml'
                    }
                }
            }
        }
    }

    post {
        always {
            junit 'reports/**/*.xml'
        }
    }
}
